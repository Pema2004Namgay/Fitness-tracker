<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Personal Fitness Tracker</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <header>
    <div class="container">
      <h1 class="logo-text">Fitness Tracker</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/login">Login</a>
        <a href="/signup">Sign Up</a>
      </nav>
    </div>
  </header>

  <section class="hero no-image">
    <div class="container">
      <h1>Track Your Fitness Journey</h1>
      <p>Monitor workouts, set goals, and visualize progressâ€”all in one place.</p>
      <a href="/signup" class="cta-button">Get Started</a>
    </div>
  </section>

  <section class="features">
    <div class="container">
      <h2>Features</h2>
      <div class="feature-list">
        <% features.forEach(feature => { %>
          <div class="feature-item">
            <h3><%= feature.title %></h3>
            <p><%= feature.description %></p>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <footer>
    <div class="container">
      <p>&copy; 2025 Personal Fitness Tracker</p>
    </div>
  </footer>
</body>
</html>
